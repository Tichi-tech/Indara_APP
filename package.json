{
  "name": "indara-ai",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:mobile": "npm start --workspace=apps/mobile",
    "build:web": "npm run build --workspace=apps/web",
    "build:mobile": "npm run build --workspace=apps/mobile",
    "typecheck": "npm run typecheck --workspace=apps/web",
    "install:all": "npm install && npm install --workspace=apps/web && npm install --workspace=packages/shared"
  },
  "devDependencies": {
    "typescript": "^5.0.2"
  }
}