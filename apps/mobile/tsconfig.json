{
  "extends": [
    "expo/tsconfig.base",
    "../../tsconfig.base.json"
  ],
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["src/*"],
      "@indara/tokens": ["../../packages/tokens/src"],
      "@indara/tokens/*": ["../../packages/tokens/src/*"],
      "@indara/shared": ["../../packages/shared/src"],
      "@indara/shared/*": ["../../packages/shared/src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../../packages/shared/src/**/*",
    "nativewind-env.d.ts"
  ]
}